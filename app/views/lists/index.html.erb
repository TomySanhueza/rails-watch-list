<div class="position-relative text-center">
  <!-- Header image -->
  <%= image_tag "headerimage.jpg", class: "img-fluid w-100", style: "height: 300px; object-fit: cover;" %>
  <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.5);"></div>
  <div class="position-absolute top-50 start-50 translate-middle">
    <h1 class="text-white fw-bold">Create lists of amazing movies</h1>
  </div>
</div>
<!-- My lists and button -->
<div class="container my-4 p-4 bg-white shadow">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">My lists</h2>
    <%= link_to 'Create a New list', new_list_path, class: 'btn btn-success' %>
  </div>
<!-- Lists grid -->
<div class="container my-4">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-3 mb-4">
        <%= link_to list_path(list), class: "text-decoration-none text-dark" do %>
          <div class="card h-100 shadow-sm">
            <% if list.image_url.present? %>
              <%= image_tag list.image_url, class: "card-img-top", alt: list.name, style: "height: 180px; object-fit: cover;" %>
            <% else %>
              <%= image_tag "imageplaceholder.jpg", class: "card-img-top", alt: "Sin imagen", style: "height: 180px; object-fit: cover;" %>
            <% end %>
            <div class="card-body text-center">
              <h6 class="card-title"><%= list.name %></h6>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
  
</div>

